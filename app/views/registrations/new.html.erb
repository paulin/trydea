<% title "Sign up for a tryDea account", false%>

<div class="mBottom10 line gray">
    <h1 class="heading">Sign up for an Account</h1>
</div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <div class="alarm">	
    <h2>Hi New Users!</h2>
  	<p>We are currently in a private alpha. In the interest of preventing user frustration we are keeping this alpha release locked down with a secret code.	We will remove it when we are ready for visitors.  If you would like to know when it is safe to join, then follow us on <a href="http://twitter.com/trydea_apps">twitter</a></p>
  </div> 
  <div class="notice">
    <div id="code">
      <label for="signup_code">Signup Code</label>
      <%= text_field_tag("signup_code", "") %>
    </div>
    <p id="username">
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>
    <p id="email">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
    <p id="password">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>
    <p id="password_confirmation">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </p>
    <p id="submit">
        <%= f.submit "Sign up" %>
    </p>
    <div class="devise">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
<% end %>